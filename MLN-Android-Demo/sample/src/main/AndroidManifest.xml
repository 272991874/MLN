<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mln.demo">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        android:name="com.mln.demo.App">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.34" />
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <activity
            android:name="com.mln.demo.activity.DemoActivity">
        </activity>




       <!-- .performance.EmptyActivity    .activity.LuaViewActivity -->
        <activity android:name="com.mln.demo.activity.LuaViewActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
                  android:theme="@style/AppTheme.StartingWindowTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.mln.demo.activity.WebActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />


        <activity
            android:name="com.mln.demo.activity.LoadActivity"
            android:launchMode="singleTop">
        </activity>


        <!--<activity android:name=".activity.LuaViewActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"/>-->


        <activity android:name="com.mln.demo.activity.LuaViewContainerActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"/>

        <activity android:name="com.mln.demo.activity.WeidgetTesterActivity"
            android:exported="true"/>

        <activity android:name="com.mln.demo.activity.LuaSDKTestActivity"/>

        <!--config for Glide-->
        <meta-data
            android:name="com.mln.demo.provider.GlideConfiguration"
            android:value="GlideModule"/>
    </application>

</manifest>
